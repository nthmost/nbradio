[Unit]
Description=KNOB - Liquidsoap Service
After=network.target sound.target
Wants=network.target

[Service]
Type=simple
User=liquidsoap
Group=liquidsoap
EnvironmentFile=/etc/liquidsoap/.env
ExecStartPre=+/media/radio/scripts/generate_autodj_playlist.sh
ExecStart=/usr/bin/liquidsoap /etc/liquidsoap/radio.liq
ExecReload=/bin/kill -HUP $MAINPID
Restart=on-failure
RestartSec=5
TimeoutStartSec=300

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=knob

[Install]
WantedBy=multi-user.target
